		]
	},
    "autoload": {
        "psr-4": {
            "SmashPig\\": "./"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://gerrit.wikimedia.org/r/p/wikimedia/fundraising/php-queue.git"
        },
        {
            "type": "git",
            "url": "https://github.com/ejegg/login-and-pay-with-amazon-sdk-php"
        }
